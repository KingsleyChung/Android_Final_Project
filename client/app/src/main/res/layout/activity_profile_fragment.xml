<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.kingsleychung.final_project.ProfileFragment">

    <ProgressBar
        android:id="@+id/profileProgress"
        android:visibility="visible"
        style="?android:attr/progressBarStyleLarge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/profilePhoto"
        android:src="@mipmap/ic_launcher"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="laoban"
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/profileName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:id="@+id/profileLine1"
        android:background="#a0a0a0"
        android:layout_width="0dp"
        android:layout_height="1dp">
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/profileLine1"
        android:id="@+id/profileSetting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="60dp">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/personMes"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:text="个人信息修改"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/profileSetting"
        app:layout_constraintLeft_toLeftOf="@id/profileLine1"
        app:layout_constraintRight_toRightOf="@id/profileLine1"
        android:orientation="horizontal"
        android:id="@+id/profileLine2"
        android:background="#a0a0a0"
        android:layout_width="0dp"
        android:layout_height="1dp">
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/profileLine2"
        android:id="@+id/moneySetting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="60dp">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/moneyMes"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:text="钱包充值"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/moneySetting"
        app:layout_constraintLeft_toLeftOf="@id/profileLine1"
        app:layout_constraintRight_toRightOf="@id/profileLine1"
        android:orientation="horizontal"
        android:id="@+id/profileLine3"
        android:background="#a0a0a0"
        android:layout_width="0dp"
        android:layout_height="1dp">
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/profileLine3"
        android:id="@+id/accountSetting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="60dp">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/accountMes"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:text="账号绑定"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/arrow"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/accountSetting"
        app:layout_constraintLeft_toLeftOf="@id/profileLine1"
        app:layout_constraintRight_toRightOf="@id/profileLine1"
        android:orientation="horizontal"
        android:id="@+id/profileLine4"
        android:background="#a0a0a0"
        android:layout_width="0dp"
        android:layout_height="1dp">
    </LinearLayout>
    <TextView
        android:id="@+id/ourLan"
        android:text="你做不到的>我都可以帮你"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/logoutButton"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ourLan"
        android:text="退出登录"
        android:layout_width="120dp"
        android:layout_height="50dp" />
</android.support.constraint.ConstraintLayout>
