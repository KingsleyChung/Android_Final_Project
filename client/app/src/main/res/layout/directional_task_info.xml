<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:id="@+id/detail_icon"
    android:src="@drawable/ic_info_white_48pt_3x"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/detail_receiver_name"
    android:text="Username"
    android:textSize="30sp"
    app:layout_constraintLeft_toRightOf="@id/detail_icon"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="20dp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/detail_phone"
    android:text="Phone"
    android:textSize="28sp"
    app:layout_constraintTop_toBottomOf="@id/detail_receiver_name"
    app:layout_constraintLeft_toLeftOf="@id/detail_receiver_name"/>

</android.support.constraint.ConstraintLayout>